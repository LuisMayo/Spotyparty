{
  "manifest_version": 2,
  "name": "Spotless",
  "description": "Effortless Spotify",
  "version": "0.0.1",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Spotless",
    "default_popup": "popup.html"
  },
  "permissions": [
    "cookies",
    "*://*/*"
  ]
}
